<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#accbf2"
                android:centerY="1.0"
                android:endColor="#accbf2"
                android:startColor="#accbf2" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#2e86f3"
                    android:centerY="1.0"
                    android:endColor="#2e86f3"
                    android:startColor="#2e86f3" />
            </shape>
        </clip>
    </item>
</layer-list>