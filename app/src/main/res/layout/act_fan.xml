<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rustfisher.view.fan.FanView
        android:id="@+id/fanView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:propWid="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fanView1"
        android:orientation="horizontal">

        <com.rustfisher.view.fan.FanView
            android:id="@+id/fanView2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:propColor="#9f0f0f" />

        <com.rustfisher.view.fan.FanView
            android:id="@+id/fanView3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:propColor="#9f9f0f" />

        <com.rustfisher.view.fan.FanView
            android:id="@+id/fanView4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:propColor="#0f9f8f" />

        <com.rustfisher.view.fan.FanView
            android:id="@+id/fanView5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:propColor="#9f9fff" />
    </LinearLayout>

</RelativeLayout>